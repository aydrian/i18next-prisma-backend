{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": { "~/*": ["./src/*"], "tests/*": ["./tests/*"] }
  },
  "include": [
    "src/**/*",
    "distinguishing/index.d.ts" // declaration file path
  ]
}
